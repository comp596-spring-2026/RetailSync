{
  "name": "@retailsync/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server/src/index.js",
    "seed:pos": "tsx src/scripts/seedPosSample.ts",
    "test": "pnpm run test:unit",
    "test:unit": "vitest run --exclude src/**/*.e2e.test.ts --exclude src/**/*.integration.test.ts --exclude src/tenantIsolation.test.ts --exclude src/auth.refresh.test.ts --exclude src/inventoryLedger.immutability.test.ts",
    "test:integration": "vitest run src/auth.account-recovery.e2e.test.ts src/tenantIsolation.test.ts src/auth.refresh.test.ts src/inventoryLedger.immutability.test.ts",
    "lint": "tsc -p tsconfig.json --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@retailsync/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "googleapis": "^144.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "mongodb-memory-server": "^10.4.3",
    "supertest": "^7.1.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
